<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/rlGlobal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginStart="25dp">

        <TextView
            android:id="@+id/tvClientFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rupert Michel"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvClientFullName"
            android:text="22, Rue de la Rue, 42000 Pas Ici" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMailAddress"
            android:text="01.23.45.67.89" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
