<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/rlGlobal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvClientLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Last Name"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvClientFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvClientLastName"
            android:layout_alignBaseline="@+id/tvClientLastName"
            android:layout_centerHorizontal="true"
            android:text="First Name" />


        <TextView
            android:id="@+id/tvMailAdresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCarModel"
            android:layout_centerHorizontal="true"
            android:text="AA-111-AA"
            android:typeface="serif" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
