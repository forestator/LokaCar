<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/rlGlobal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvholderStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date" />

            <TextView
                android:id="@+id/tvLLStartRentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvholderStartDate"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tvholderStartDate"
                android:text="26/10/2018" />

            <TextView
                android:id="@+id/tvholderEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvholderStartDate"
                android:text="@string/end_date" />

            <TextView
                android:id="@+id/tvLLEndRentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvholderEndDate"
                android:layout_alignLeft="@+id/tvLLStartRentDate"
                android:text="30/11/2018"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/rl1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLLCarBrandNModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marque - Model"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tvLLClientFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLLCarBrandNModel"
                android:layout_centerHorizontal="true"
                android:text="Jean-Pierre Michel" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
