<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/rlGlobal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rlLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvCarBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marque de voiture"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>


            <TextView
                android:id="@+id/tvCarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCarBrand"
                android:text="ModÃ¨le de voiture"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tvCarType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCarModel"
                android:text="Type" />

            <TextView
                android:id="@+id/separator_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvCarType"
                android:layout_toEndOf="@+id/tvCarType"
                android:text=" -- " />

            <TextView
                android:id="@+id/tvFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/separator_1"
                android:layout_toEndOf="@+id/separator_1"
                android:text="Carburant"/>

            <TextView
                android:id="@+id/separator_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvFuel"
                android:layout_toEndOf="@+id/tvFuel"
                android:text=" -- " />

            <TextView
                android:id="@+id/tvSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/separator_2"
                android:layout_toEndOf="@+id/separator_2"
                android:text="2 places"/>

            <TextView
                android:id="@+id/tvPlateNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCarType"
                android:layout_centerHorizontal="true"
                android:text="AA-111-AA"
                android:typeface="serif" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ImgCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="25dp"
            android:src="@drawable/lokacar_ic_car_90" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
